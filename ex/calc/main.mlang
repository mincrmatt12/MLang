#include stdlib.mlang
#include token.mlang

main(argc, 8** argv) = {
	if (argc > 1) debug = true;
	puts("Infix calculator, supported +-/*%. Enter an expression:");
	var 8[64] in_str;
	var 8 length = 0;
	while (length < 64) {
		var 8 c = getchar();
		if (c == 10) {
			in_str[length] = 0;
			length = 65;
		}
		else {
			in_str[length++] = c;
			if (debug) printf("GOT: %c, %d\n", c, <64>(length));
		}
	}
	var 64 result = evaluate(in_str);
	printf("= %d\n", result);
	return 0;
}
